@model IEnumerable<OneRosterSync.Net.Models.District>

@{
    ViewData["Title"] = "Districts";
}

<h2>School Districts <small>CSV Synchronization Automation</small></h2>
<p>
    <a asp-action="DistrictCreate">Create New District</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DailyProcessingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextProcessingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DailyProcessingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextProcessingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modified)
            </td>
            <td>
                <a asp-action="DistrictEdit" asp-route-districtId="@item.DistrictId">Edit</a> |
                <a asp-action="DistrictDelete" asp-route-districtId="@item.DistrictId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
